import random
import time
def displayIntro():
    print('''You are in a land full of dragons. In front of you,
you see two caves. In one cave, the dragon is friendly
and will share his treasure with you. The other dragon
is greedy and hungry, and will eat you on sight.''')
print()
def chooseCave():
    #Comparing cave as a list to an int will always be true
    while cave != '1' and cave != '2':
        cave_count = 0
        print('Which cave will you go into? (1 or 2)')
        cave.append(int(input()))
        cave_count += 1
        return cave, cave_count
    print(cave)

def checkCave(chosenCave):
    chosenCave = cave
    #I got lives to work, but maybe make another function to check status?
    #Does not track if lives > 1
    player_lives = 3
    print('You approach the cave...')
    time.sleep(2)
    print('It is dark and spooky...')
    time.sleep(2)
    print('A large dragon jumps out in front of you! He opens his jaws and...')
    print()
    time.sleep(2)

    friendlyCave = random.randint(1, 2)

    
    if chosenCave == str(friendlyCave):
        print('Gives you his treasure!')
    else:
        print('Gobbles you down in one bite!')
        player_lives -= 1
    while player_lives > 0:
        chooseCave()
        checkCave(chosenCave)
    if player_lives < 1:
        print('You died.')
    return player_lives, chosenCave

playAgain = 'yes'
while playAgain == 'yes' or playAgain == 'y':
    displayIntro()
    caveNumber = chooseCave()
    checkCave(caveNumber)

    print('Do you want to play again? (yes or no)')
    playAgain = input()
